% neurips_2025.sty
% NeurIPS 2025 style file (based on NeurIPS 2024)

\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{neurips_2025}[2025/01/01 NeurIPS 2025 submission/camera-ready style file]

% Options
\newif\if@final\@finalfalse
\newif\if@preprint\@preprintfalse
\newif\if@nonatbib\@nonatbibfalse
\DeclareOption{final}{\@finaltrue}
\DeclareOption{preprint}{\@preprinttrue}
\DeclareOption{nonatbib}{\@nonatbibtrue}
\ProcessOptions\relax

% Package dependencies
\RequirePackage{geometry}
\RequirePackage{fancyhdr}
\RequirePackage{natbib}

% Page geometry
\geometry{
  textheight=9in,
  textwidth=5.5in,
  top=1in,
  headheight=12pt,
  headsep=25pt,
  footskip=30pt
}

% Title formatting
\def\@maketitle{%
  \newpage
  \null
  \vskip 2em%
  \begin{center}%
    \let \footnote \thanks
    {\LARGE \@title \par}%
    \vskip 1.5em%
    {\large
      \lineskip .5em%
      \begin{tabular}[t]{c}%
        \@author
      \end{tabular}\par}%
    \vskip 1em%
    {\large \@date}%
  \end{center}%
  \par
  \vskip 1.5em}

% Abstract
\renewenvironment{abstract}{%
  \centerline{\large\bfseries Abstract}%
  \vspace{0.5ex}%
  \begin{quote}%
}{%
  \end{quote}%
}

% Section formatting
\renewcommand\section{\@startsection {section}{1}{\z@}%
                                   {-3.5ex \@plus -1ex \@minus -.2ex}%
                                   {2.3ex \@plus.2ex}%
                                   {\normalfont\Large\bfseries}}
\renewcommand\subsection{\@startsection{subsection}{2}{\z@}%
                                     {-3.25ex\@plus -1ex \@minus -.2ex}%
                                     {1.5ex \@plus .2ex}%
                                     {\normalfont\large\bfseries}}
\renewcommand\subsubsection{\@startsection{subsubsection}{3}{\z@}%
                                     {-3.25ex\@plus -1ex \@minus -.2ex}%
                                     {1.5ex \@plus .2ex}%
                                     {\normalfont\normalsize\bfseries}}

% Headers
\if@final
  \pagestyle{fancy}
  \fancyhf{}
  \fancyhead[C]{NeurIPS 2025}
  \fancyfoot[C]{\thepage}
\else
  \pagestyle{plain}
\fi

% Citation style
\if@nonatbib\else
  \bibliographystyle{abbrvnat}
  \setcitestyle{authoryear,round,semicolon}
\fi

\endinput
